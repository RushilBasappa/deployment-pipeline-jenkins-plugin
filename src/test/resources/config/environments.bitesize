project: example
environments:
  - name: Development
    namespace: sample-app-dev
    next_environment: Staging
    deployment:
      method: rolling-upgrade
      timeout: 300
    services:
      - name: test-service
        application: sample-app
        external_url: test-service-dev.pearson.com
        ssl: true
        port: 80
        volumes:
          - name: nfs
            path: /nfs
            modes: ReadWriteMany
            size: 100G
        env:
          - name: NODE_ENV
            value: production
          - name: SOMETHING
            value: new_value
          - name: BOO
            value: ok
          - name: tos_url
            value: nononono
      - name: second-service
        application: sample-app
        external_url: test-service2-dev.pearson.com
        port: 80
      - name: awesomedb
        type: mysql
        version: 5.6
    tests:
      - name: Sample test
        repository: git@github.com/sample-test.git
        branch: master
        commands:
          - shell: rake test
  - name: Staging
    namespace: sample-app-stage
    deployment:
      method: bluegreen
      active: blue
      mode: manual
      timeout: 300
    services:
      - type: mysql
        name: db
        version: 0.1
      - type: mongo
        name: mongodb
        version: 0.1
      - name: test-service
        application: sample-app
        external_url: test-service-stg.pearson.com
        replicas: 2
        port: 80
        health_check:
          command:
            - /bin/cat
            - /tmp/health.txt
        env:
          - name: NODE_ENV
            value: staging
      - name: custom-service
        application: sample-app
        external_url: custom-service-stg.pearson.com
        replicas: 2
        port: 80
        deployment:
          active: green
          mode: auto
    tests:
      - name: Sample test
        repository: git@github.com/sample-test.git
        commands:
          - shell: ls
